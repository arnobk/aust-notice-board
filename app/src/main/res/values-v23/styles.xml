<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:actionBarStyle">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>
    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>